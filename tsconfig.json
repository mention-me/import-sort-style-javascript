{
    "compilerOptions": {
        "baseUrl": "./src",
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "rootDir": "src",
        "skipLibCheck": true,
        "target": "es5",
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "typeRoots": ["node_modules/@types"]
}
